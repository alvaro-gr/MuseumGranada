<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crear_comentario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pdm.alvaro.museumcomments.crearComentarioActivity">

    <TextView
        android:text="@string/tema_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo8"
        android:typeface="normal"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary" />

    <Button
        android:text="@string/opinar"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/crearbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorSecundario"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/titulo8"
        android:layout_alignParentStart="true"
        android:id="@+id/editTema"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:layout_height="100dp" />

    <TextView
        android:text="@string/aviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="14sp"
        android:textStyle="normal|italic"
        android:layout_below="@+id/editComentario"
        android:layout_alignStart="@+id/editComentario" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:numStars="5"
        android:id="@+id/ratingBar"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/volver48"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/titulo8"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/returnButton" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/salida"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/exitbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editComentario"
        android:gravity="left|top"
        android:layout_height="200dp"
        android:textColor="?android:attr/colorForeground"
        android:layout_below="@+id/titulo9"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp" />

    <TextView
        android:text="@string/opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo9"
        android:typeface="normal"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/valoracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:typeface="normal"
        android:layout_below="@+id/editTema"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

</RelativeLayout>
